{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Run NASM (Windows)",
            "type": "shell",
            "command": "nasm -f win64 \"${file}\" -o \"${fileBasenameNoExtension}.obj\" && gcc \"${fileBasenameNoExtension}.obj\" -o \"${fileBasenameNoExtension}.exe\" && \"${fileBasenameNoExtension}.exe\" & echo ExitCode=%ERRORLEVEL%",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/C"
                    ]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "focus": true,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}

